[Unit]
Description=Ramen Workers Supervisor
PartOf=ramen.target
Documentation=https://rixed.github.io/ramen/man/supervisor.html

[Install]
WantedBy=ramen.target

[Service]
EnvironmentFile=-/etc/default/ramen
ExecStart=/usr/bin/ramen supervisor --stdout
KillMode=mixed
TimeoutStopSec=120
User=ramen
Group=ramen
Restart=always
RestartSec=60
